<launch>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base_node" output="screen">
    
    <!-- move_base -->
    <rosparam file="$(find config)/move_base/move_base_params.yaml" command="load"/>

    <!-- costmap -->
    <rosparam file="$(find config)/costmap/costmap_common_params_sim.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find config)/costmap/costmap_common_params_sim.yaml" command="load" ns="local_costmap" />
    <!-- costmap -->
    <rosparam file="$(find config)/costmap/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find config)/costmap/global_costmap_params.yaml" command="load" />
    <!-- costmap -->
    <rosparam file="$(find config)/costmap/costmap_converter_params.yaml" command="load" />
    
    <!-- gobal planner -->
    <param name="base_global_planner" value="global_planner/GlobalPlanner"/>
    <!--rosparam file="$(find config)/global_planner/base_global_planner_params.yaml" command="load" /-->

    <!-- local planner -->
    <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
    <rosparam file="$(find config)/local_planner/base_local_planner_params.yaml" command="load" />
    <!--
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <rosparam file="$(find config)/move_base_config/dwa_local_planner_params.yaml" command="load" />
    -->  

  </node>

</launch>
